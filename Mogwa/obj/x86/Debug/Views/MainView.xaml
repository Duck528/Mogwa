<Page
    x:Class="Mogwa.Views.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <!-- 색상 정의 -->
        <SolidColorBrush x:Key="navColor">#282828</SolidColorBrush>
        <SolidColorBrush x:Key="stateColor">#B93C3C</SolidColorBrush>
        <SolidColorBrush x:Key="bgColor">#3c3c3c</SolidColorBrush>
        
        <!-- 스타일 정의 -->
    </Page.Resources>

    <Grid Background="{StaticResource bgColor}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="45"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition MinHeight="35" MaxHeight="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 
        상태바로서 현재 보여지는 페이지의 종류와 뒤로가기 버튼, 햄버그 버튼이 존재한다
        -->
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal"
                    Background="{StaticResource stateColor}">
            <StackPanel.Children>
                <!--
                햄버그 버튼으로 클릭하면 아이콘 우측에 설명이 보여진다
                -->
                <Button Width="45" Height="30" Background="Transparent"
                        Command="{Binding ToggleNavMenu}">
                    <Button.Content>
                        <Image Source="ms-appx:///Resources/hamburge.png" HorizontalAlignment="Center"/>
                    </Button.Content>
                </Button>
                <!-- 현재 메인에 보여지는 페이지의 종류 -->
                <TextBlock Text="Home" Margin="45 0 0 0" VerticalAlignment="Center"/>
                <!-- 뒤로가기 버튼 -->
                <Button Width="45" Height="30" Background="Transparent">
                    <Button.Content>
                        <Image Source="ms-appx:///Resources/back.png" HorizontalAlignment="Center"/>
                    </Button.Content>
                </Button>
            </StackPanel.Children>
        </StackPanel>
        
        <!-- 
        네비게이터로 상단부터 차례로 홈, 검색, 음악, 비디오가 오며 하단부터는 설정, 회원정보가 온다
        -->
        <SplitView Grid.Row="1" Grid.Column="0" DisplayMode="CompactOverlay"
                   IsPaneOpen="{Binding IsNavMenuOpened}" CompactPaneLength="45" OpenPaneLength="130">
            <SplitView.Pane>
                <StackPanel Background="{StaticResource navColor}">
                    <!-- 홈 버튼 -->
                    <StackPanel Orientation="Horizontal">
                        <Button Width="45" Height="40" Background="Transparent">
                            <Button.Content>
                                <Image Source="ms-appx:///Resources/home.png"/>
                            </Button.Content>
                        </Button>
                        <TextBlock Text="홈" Margin="10 0 0 0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </StackPanel>
                    <!-- 검색 버튼 -->
                    <StackPanel Orientation="Horizontal">
                        <Button Width="45" Height="40" Background="Transparent">
                            <Button.Content>
                                <Image Source="ms-appx:///Resources/search.png"/>
                            </Button.Content>
                        </Button>
                        <TextBlock Text="검색" Margin="10 0 0 0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </StackPanel>
                    <!-- 음악 버튼 -->
                    <StackPanel Orientation="Horizontal">
                        <Button Width="45" Height="40" Background="Transparent">
                            <Button.Content>
                                <Image Source="ms-appx:///Resources/music.png"/>
                            </Button.Content>
                        </Button>
                        <TextBlock Text="음악" Margin="10 0 0 0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </StackPanel>
                    <!-- 비디오 버튼 -->
                    <StackPanel Orientation="Horizontal">
                        <Button Width="45" Height="40" Background="Transparent">
                            <Button.Content>
                                <Image Source="ms-appx:///Resources/video.png"/>
                            </Button.Content>
                        </Button>
                        <TextBlock Text="음악"  Margin="10 0 0 0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </SplitView.Pane>
        </SplitView>
    </Grid>
</Page>

